@model MvcProductList.Models.Product

@{
    ViewBag.Title = "Delete";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h2>Delete</h2>
            <h3>Are you sure you want to delete this?</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <dl>
                <dt class="display-label">
                    @Html.DisplayNameFor(model => model.Category)
                </dt>
                <dd class="display-field">
                    @Html.DisplayFor(model => model.Category)
                </dd>
                <dt class="display-label">
                    @Html.DisplayNameFor(model => model.Quantity)
                </dt>
                <dd class="display-field">
                    @Html.DisplayFor(model => model.Quantity)
                </dd>

                <dt class="display-label">
                    @Html.DisplayNameFor(model => model.ImagePath)
                </dt>
                <dd class="display-field">
                    <img src="@Html.DisplayFor(model => model.ImagePath)"/>
                </dd>
            </dl>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="btn-group" role="group" aria-label="Details">
                    <input class="btn btn-danger" type="submit" value="Delete" />
                    <a class="btn btn-secondary" href="@Url.Action("Index")" role="button">Back to List</a>
                </div>
            }

        </div>
    </div>
</div>


