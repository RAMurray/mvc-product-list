@model IEnumerable<MvcProductList.Models.Product>

@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h2>Product List</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <a class="btn btn-primary" href="@Url.Action("Create", "Product")" role="button">Create New</a>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <hr class="border-top: 1px solid rgba(0, 0, 0, 0.1); border-bottom: 1px solid rgba(255, 255, 255, 0.3);" />
        </div>
    </div>
    
    @using (Html.BeginForm())
    {
        <div class="form-group">
             @Html.DropDownList("catFilter", new SelectList(ViewBag.Categories, "Value", "Text"), "All", new { @class = "form-control col-md-4" })
            <input type="submit" class="btn btn-secondary" value="Filter" />
        </div>
    }

    <div class="row">
        <div class="col-lg-12">
            <table class="table">
                <thead class="thead-dark">
                <tr>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.ProductName)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.Category)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.Quantity)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.ImagePath)
                    </th>
                    <th></th>
                </tr>
                </thead>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProductName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Category)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Quantity)
                        </td>
                        <td>
                            <img src="@Html.DisplayFor(modelItem => item.ImagePath)"  style="width: 50px"/>
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.ProductId }) |
                            @Html.ActionLink("Details", "Details", new { id = item.ProductId }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.ProductId })
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>


